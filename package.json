{
	"private": true,
	"name": "vise",
	"version": "0.1.0",
	"license": "MIT",
	"scripts": {
		"build": "preact build",
		"serve": "sirv build --port 8080 --cors --single",
		"dev": "preact watch",
		"lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
		"test": "jest ./tests"
	},
	"eslintConfig": {
		"parser": "@typescript-eslint/parser",
		"ignorePatterns": [
			"build/"
		],
		"parserOptions": {
			"sourceType": "module",
			"ecmaFeatures": {
				"jsx": true,
				"octalLiterals": false
			},
			"ecmaVersion": 6,
			"lib": [
				"dom",
				"es6"
			]
		},
		"env": {
			"es6": true,
			"jest": true,
			"serviceworker": true
		},
		"extends": "preact",
		"plugins": [
			"react"
		],
		"rules": {
			"no-unused-vars": "off",
			"no-redeclare": "off",
			"no-var": "off"
		}
	},
	"dependencies": {
		"material-icons": "^1.10.8",
		"preact": "^10.3.1",
		"preact-render-to-string": "^5.1.21",
		"preact-router": "^3.2.1"
	},
	"devDependencies": {
		"@types/enzyme": "^3.10.5",
		"@types/jest": "^26.0.8",
		"@types/lodash": "^4.14.182",
		"@typescript-eslint/eslint-plugin": "^2.25.0",
		"@typescript-eslint/parser": "5.20.0",
		"enzyme": "^3.11.0",
		"enzyme-adapter-preact-pure": "^3.1.0",
		"eslint": "^6.8.0",
		"eslint-config-preact": "^1.1.1",
		"jest": "^27.2.5",
		"jest-preset-preact": "^4.0.2",
		"preact-cli": "^3.0.0",
		"sass": "^1.50.0",
		"sass-loader": "10",
		"sirv-cli": "^1.0.0-next.3",
		"typescript": "^4.5.2"
	},
	"jest": {
		"preset": "jest-preset-preact",
		"setupFiles": [
			"<rootDir>/tests/__mocks__/browserMocks.ts",
			"<rootDir>/tests/__mocks__/setupTests.ts"
		]
	}
}
